@model IList<WebQLKhoDuoc.Models.BaoCaoN>
@{
    ViewBag.Title = "ChiTietBCN";
    Layout = "~/Views/Shared/TrangChuDM.cshtml";
}


@ViewBag.Result
   <div class="x_panel">
    <div class="x_title">
        <h2>Chi tiết Hàng nhập</h2>
        @*@Html.HiddenFor(model => model.MaPhieuX)*@

        <div class="clearfix"></div>
    </div>
</div>
        <!-- /.row -->
 
<div class="x_panel">
    <!-- /.panel-heading -->
    <div class="panel body panel panel-primary">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>

                <tr class="headings">
                    <th class="column-title">
                        Số hợp đồng
                    </th>
                    <th class="column-title">
                        Ngày nhập
                    </th>
                    <th class="column-title">
                        Tên mặt hàng
                    </th>
                    <th class="column-title">
                        Đơn vị tính
                    </th>
                    <th class="column-title">
                        Số lượng nhập
                    </th>
                    <th class="column-title">
                        Giá
                    </th>
                    <th class="column-title">
                        Thành Tiền
                    </th>
                    <th class="column-title">
                        Tên nhà cung cấp
                    </th>
                    <th class="column-title">
                        Tên Kho Nhập
                    </th>
                </tr>

            </thead>
            @foreach (var item in Model)
            {
                <tbody>

                    <tr class="even pointer">

                        <td class="">
                            @Html.DisplayFor(modelItem => item.SoHopDong)
                        </td>
                        <td class="">
                            @Html.DisplayFor(modelItem => item.NgayNhap)
                        </td>
                        <td class="">
                            @Html.DisplayFor(modelItem => item.TenMatHang)
                        </td>
                        <td class="">
                            @Html.DisplayFor(modelItem => item.DonViTinh)
                        </td>
                        <td class="">
                            @Html.DisplayFor(modelItem => item.SLHangTamN)
                        </td>
                        <td class="htmlfield">
                            @Html.DisplayFor(modelItem => item.Gia)
                        </td>
                        <td class="htmlfield">
                            @Html.DisplayFor(modelItem => item.ThanhTien)
                        </td>
                        <td class="">
                            @Html.DisplayFor(modelItem => item.TenNhaCC)
                        </td>
                        <td class="">
                            @Html.DisplayFor(modelItem => item.TenKho)
                        </td>
                    </tr>
                </tbody>
            }

        </table>
        <div>
            <h3 class="htmlfield">Tổng giá: @ViewBag.tong</h3>
        </div>
    @if (@Session["MaLoaiThanhVien"].Equals(1)||@Session["MaLoaiThanhVien"].Equals(3)||@Session["MaLoaiThanhVien"].Equals(4))
                      {
        <a href="@Url.Action("ExporttoExcel", "BaoCaoNhap", new { @Manhacc = @ViewBag.MaNhaCC2, @tungay =ViewBag.tungay, @denngay= ViewBag.denngay })" class="btn btn-primary btn-xs">
            <i class="fa fa-align-right"></i>
            Xuất báo cáo--Excel
        </a>
    }
    else
            {
                 <script language="javascript">
                        window.onload = function () {
                            alert("Vui lòng liên hệ với ban tài chính hoặc ban kế hoạch copy báo cáo!");
                           // window.location = "../BaoCao/BaoCaoHangXuat";

                        }

                    </script>
            }
    </div>
    <!-- /.panel-body -->

</div>


<script src="~/Content/jquery.priceformat.min.js"></script>

<script type="text/javascript">

    $('.htmlfield').priceFormat({
        prefix: '',
        limit: 0,
        centsLimit: 2
    });
</script>



