@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<WebQLKhoDuoc.Models.DanhMucQuyen>
@{
    ViewBag.Title = "XemDMQuyen";
    Layout = "~/Views/Shared/TrangChuDM.cshtml";
}


<div class="page-title">
    <div class="x_panel">
        <div class="x_title">
            <h2>Xem danh mục quyền</h2>

            <div class="clearfix"></div>
        </div>
    </div>

</div>


<br /><br /><br />
<div><br /></div>



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

      

        <div class="x_panel">
            <div class="x_content">
                <a href="@Url.Action("UpdateNV", "DanhMucQuyen")" class="btn btn-warning btn-xs">
                    <i class="fa fa-refresh"></i>
                    Cập nhật
                  
                </a>
                <br />
                <div>@Html.Raw(TempData["err"])</div>
                <br />
                <div class="panel body panel panel-primary">
                    <table width=100% class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr class="headings">


                                <th class="column-title">Mã danh mục quyền</th>
                                <th class="column-title">Tên danh mục quyền</th>
                                <th class="column-title text-center">Sửa</th>
                             

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>

                                <tr class="even pointer">

                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.MaDMQuyen)
                                    </td>
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.TenDMQuyen)
                                    </td>
                                   
                                    <td class="" align="center">
                                        <a href="@Url.Action("SuaDMQuyen", "DanhMucQuyen", new { @MaDMQuyen = item.MaDMQuyen })" class="btn btn-info btn-xs">
                                            <i class="fa fa-pencil"></i>
                                            Sửa
                                        </a>
                                    </td>
                                  

                                </tr>

                            </tbody>
                        }
                    </table>
                    <br />
                    

                </div>
            </div>

        </div>

    </div>
</div>

    <div style="margin-left:400px">
    @Html.PagedListPager(Model, page => Url.Action("XemDMQuyen", new { page = page }))
</div>



