@model IList<WebQLKhoDuoc.Models.BaoCaoX>
@{
    ViewBag.Title = "ChiTietBCX";
    Layout = "~/Views/Shared/TrangChuDM.cshtml";
}
@ViewBag.Result
<div class="x_panel">
    <div class="x_title">
        <h2>Chi tiết Hàng xuất</h2>
        @*@Html.HiddenFor(model => model.MaPhieuX)*@

        <div class="clearfix"></div>
    </div>
</div>
<!-- /.row -->

    @*<div class="col-md-12 col-sm-12 col-xs-12">*@
        <div class="x_panel">
            <!-- /.panel-heading -->
            <div class="panel body panel panel-primary">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>

                        <tr class="headings">

                            <th class="column-title">
                                Tên mặt hàng
                            </th>
                            <th class="column-title">
                                Số lượng xuất
                            </th>
                            <th class="column-title">
                                Đơn vị tính
                            </th>
                            <th class="column-title">
                                Giá
                            </th>
                            <th class="column-title">
                                Kho xuất
                            </th>
                            <th class="column-title">
                                Đơn vị nhận
                            </th>
                            <th class="column-title">
                                Ngày xuất
                            </th>
                            <th class="column-title">
                                Thành tiền
                            </th>
                            <th class="column-title">
                                Hình thức thanh toán
                            </th>


                        </tr>

                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>

                            <tr class="even pointer">
                                <td class="">
                                    @Html.DisplayFor(modelItem => item.TenMatHang)
                                </td>
                                <td class="">
                                    @Html.DisplayFor(modelItem => item.SLHangTamX)
                                </td>
                                <td class="">
                                    @Html.DisplayFor(modelItem => item.DonViTinh)
                                </td>
                                <td class="htmlfield">
                                    @Html.DisplayFor(modelItem => item.Gia)
                                </td>
                                <td class="">
                                    @Html.DisplayFor(modelItem => item.TenKho)
                                </td>
                                <td class="">
                                    @Html.DisplayFor(modelItem => item.TenDonVi)
                                </td>
                                <td class="">
                                    @Html.DisplayFor(modelItem => item.NgayXuat)
                                </td>
                                <td class="htmlfield">
                                    @Html.DisplayFor(modelItem => item.ThanhTien)
                                </td>
                                <td class="">
                                    @Html.DisplayFor(modelItem => item.HTTT)
                                </td>

                            </tr>
                        </tbody>
                    }

                </table>

                <div>
                    <h3 class="htmlfield">Tổng giá: @ViewBag.tong</h3>
                </div>
        @if (@Session["MaLoaiThanhVien"].Equals(1)||@Session["MaLoaiThanhVien"].Equals(3)||@Session["MaLoaiThanhVien"].Equals(4))
                      {

                        <a href="@Url.Action("ExporttoExcel", "BaoCao", new { @MaDV = @ViewBag.MaDV2, @tungay = @ViewBag.tungay, @denngay = @ViewBag.denngay })" class="btn btn-primary btn-xs">
                            <i class="fa fa-align-right"></i>
                            Xuất báo cáo--Excel
                        </a>
                      }
        else
        {
            <script language="javascript">
                window.onload = function () {
                    alert("Vui lòng liên hệ với ban tài chính hoặc ban kế hoạch copy báo cáo!");
                    // window.location = "../BaoCao/BaoCaoHangXuat";

                }

            </script>
        }
             
                @*<a href="../BaoCao/ExportPXtoExcel" id="bcx" class="btn btn-primary btn-xs"><i class="fa fa-adn"></i>Báo cáo</a>*@
            </div>
            <!-- /.panel-body -->
            <!-- /.panel -->

        </div>
            <!-- /.col-lg-12 -->
        @*</div>*@

        @Html.Partial("~/Views/Shared/BacktoTopP.cshtml")



