@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<WebQLKhoDuoc.Models.PhieuNhap>
@{
    ViewBag.Title = "XemPhieuNhap";
    Layout = "~/Views/Shared/TrangChuDM.cshtml";
}

<div class="page-title">
    <div class="title_left">
        <h3> Danh Mục Phiếu Nhập</h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button">Go!</button>
                </span>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 col-sm-4 col-xs-4">
            <div class="x_panel">
                <div class="x_content">
                    <div class="panel body panel panel-primary">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>

                                <tr class="headings">
                                    @*<th class="column-title">
                                        @Html.DisplayNameFor(model => model.First().MaPhieuN)
                                    </th>*@
                                    <th class="column-title">
                                        Tên phiếu nhập
                                    </th>
                                    <th class="column-title">
                                       Ngày nhập
                                    </th>
                                    <th class="column-title">
                                       Số lượng nhập
                                    </th>                                   
                                    <th class="column-title">
                                      Tổng giá 
                                    </th>
                                    <th class="column-title">
                                       Hình Thức TT
                                    </th>
                                    <th class="column-title">
                                       Thanh toán
                                    </th>
                                    <th class="column-title">
                                      Duyệt
                                    </th>
                                    <th class="column-title">
                                      Người nhập
                                    </th>
                                    <th class="column-title">
                                      Tên kho 
                                    </th>
                                   
                                    <th class="column-title">Sửa</th>
                                    <th class="column-title">Xóa</th>
                                </tr>

                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>

                                    <tr class="even pointer">
                                        @*<td class="">
                                            @Html.DisplayFor(modelItem => item.MaPhieuN)

                                        </td>*@
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.TenPhieuN)
                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.NgayNhap)

                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.SoLuongN)
                                        </td>
                                      
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.TongGiaTriN)
                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.HTTT)
                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.isThanhToan)
                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.isDuyet)
                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.ThanhVien.TenDangNhap)
                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.Kho.TenKho)
                                        </td>
                                        
                                        <td class="">
                                            <a href="@Url.Action("SuaPN", "PhieuNhapXuat", new { @MaPhieuN = item.MaPhieuN })" class="btn btn-info btn-xs">
                                                <i class="fa fa-pencil"></i>
                                                Sửa
                                            </a>
                                        </td>
                                        <td class="">
                                            <a href="@Url.Action("XoaPN", "PhieuNhapXuat", new { @MaPhieuN = item.MaPhieuN })" class="btn btn-danger btn-xs">
                                                <i class="fa fa-trash-o"></i>
                                                Xóa
                                            </a>

                                        </td>

                                    </tr>

                                </tbody>
                            }
                        </table>
                        <br />

                        <a href="@Url.Action("ThemPN", "PhieuNhapXuat")" class="btn btn-primary btn-xs">
                            <i class="fa fa-adn"></i>
                            Thêm Mới
                        </a>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
Trang @(Model.PageCount
    < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    <div>
        @Html.PagedListPager(Model, page => Url.Action("XemDMPhieuNhap", new { page = page }))
    </div>




