@model IEnumerable<WebQLKhoDuoc.Models.PhanQuyen>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/TrangChuDM.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="x_panel">
            <div class="panel body panel panel-primary">
                <table class="table smooth-scroll">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DanhMucQuyen.TenDMQuyen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenQuyen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mota)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DanhMucQuyen.TenDMQuyen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenQuyen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mota)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaQuyen }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MaQuyen }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaQuyen })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>