@model WebQLKhoDuoc.Models.ThanhVien

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Login.cshtml";
}

@using (@Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div id="login-box" class="login-box visible widget-box no-border">
        <div class="widget-body">
            <div class="widget-main">
                <h4 class="header blue lighter bigger" style="text-align:center">                  
                   Vui lòng nhập thông tin
                </h4>

                <div class="space-6"></div>

                <form>
                    <fieldset>


                        <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                                @Html.TextBoxFor(m => m.TenDangNhap, new { @id = "txtuserid", @style = "width:300px;", @required = "required",@placeholder="username" })
                                <i class="ace-icon fa fa-user"></i>
                            </span>
                        </label>

                        <label class="block clearfix">
                            <span class="block input-icon input-icon-right">
                                @Html.PasswordFor(m => m.Pass, new { @id = "txtpasword", @style = "width:300px;", @required = "required", @placeholder = "password" })

                                <i class="ace-icon fa fa-lock"></i>
                            </span>
                        </label>

                        <div class="space"></div>

                        <div class="clearfix">

                            <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                <i class="ace-icon fa fa-key"></i>
                                <span class="bigger-110">Đăng nhập</span>
                            </button>
                        </div>


                        <div class="space-4"></div>
                    </fieldset>
                </form>
            </div>
            <!-- /.widget-main -->

            <div class="toolbar clearfix">
                <div style="margin-left:100px">
                    <a href="../Home/Index" class="forgot-password-link">
                        <i class="ace-icon fa fa-arrow-left"></i>
                        Quay lại trang chủ
                    </a>
                </div>

                @*<div>
                    <a href="../Home/DangKy" class="forgot-password-link">
                        <i class="ace-icon fa fa-arrow-right"></i>
                        I want to register
                    </a>
                </div>*@
            </div>
        </div><!-- /.widget-body -->
    </div><!-- /.login-box -->

    @*if (ViewBag.Message == 1)
    {
        <script language="javascript">
            window.onload = function () {
                window.location = "../QuanTri/Index";
            }
        </script>
    }*@
    if (ViewBag.Message == 2 || ViewBag.Message == 1)
    {
        <script language="javascript">
            window.onload = function () {
                alert("Login success");
                //window.location = "../Home/Index";

            }
        </script>
    }
   
    if (ViewBag.Message == 0)
    {
        <script language="javascript">
            window.onload = function () {
                alert("Login fail");
                window.location = "../Home/Login";
            }
        </script>
    }
}

