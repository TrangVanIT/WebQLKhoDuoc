<script type="text/javascript">
    function validateform() {
        var TenDangNhap = document.myform.TenDangNhap.value;
        var Pass = document.myform.Pass.value;
        var ConfirmPassword = document.myform.ConfirmPassword.value;
        var Email = document.myform.Email.value;

        if (TenDangNhap == null || TenDangNhap == "" || Pass == null || Pass == "" || Email == null || Email == "") {
            alert("Không được để trống name- email- password");
            return false;
        }
        else {
            if (Pass.length < 6) {
                alert("Password phải nhiều hơn 6 kí tự");
                return false;
            }
        }
        if (Pass != ConfirmPassword) {
            alert("Password không khớp.");
            return false;
        }
        return true;
    }
</script>





