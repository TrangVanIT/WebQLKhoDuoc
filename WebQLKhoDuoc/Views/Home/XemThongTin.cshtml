@using WebQLKhoDuoc.Models;

@{
    ViewBag.Title = "XemThongTin";
    Layout = "~/Views/Shared/TrangChuDM.cshtml";
}
<div class="page-title">
    <div class="x_panel">
        <div class="x_title">
            <h2>Thông tin thành viên</h2>

            <div class="clearfix"></div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <div class="panel body panel panel-primary">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <tr>
                                <td>
                                    <b> Họ tên:</b>
                                </td>
                                <td>
                                   @Model.FullName

                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Email:</b>
                                </td>
                                <td>
                                    @Model.Email
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>Giới tính:</b>
                                </td>
                                <td>
                                    @if (@Model.GioiTinh == true)
                                    {
                                        @Html.Label("Nữ")
                                    }
                                    else
                                    {
                                        @Html.Label("Nam")
                                    }
                                </td>

                            <tr>
                                <td>
                                    <b>Loại thành viên:</b>
                                </td>
                                <td>
                                    @Model.LoaiThanhVien.TenLoaiThanhVien
                                </td>
                            </tr>
                        </table>

                        </br>
                      
                    </div>

                </div>
                <a href="@Url.Action("AfterLogin", "Home")">Quay lại</a>
            </div>

        </div>
    </div>
</div>

