@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<WebQLKhoDuoc.Models.ChiTietHopDong>
@{
    ViewBag.Title = "XemMH";
    Layout = "~/Views/Shared/TrangChuDM.cshtml";
}

<div class="page-title">
   
</div>
<!-- /.row -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      
            <div class="x_content">,,
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Xem Chi tiết hợp đồng</h2>
                      

                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="x_panel">
                    <!-- /.panel-heading -->
                    <div class="panel body panel panel-primary">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>

                                <tr class="headings">
                                    <th class="column-title">
                                        Số HĐ
                                    </th>

                                    <th class="column-title">
                                        Số lượng
                                    </th>
                                    <th class="column-title">
                                        Giá/1 ĐVT
                                    </th>                                    
                                    
                                    <th class="column-title">
                                        Mặt hàng
                                    </th>
                              

                                    <th class="column-title">
                                        Sửa
                                    </th>
                                    @*BanKeHoach,Admin*@
                                   
                                    <th class="column-title">
                                        Xóa
                                    </th>                                  
                                  
                                </tr>

                            </thead>
                            @foreach (var item in Model)
                            {
                                <tbody>

                                    <tr class="even pointer">
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.HopDong.SoHopDong)
                                        </td>
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.SoLuong)
                                        </td>
                                        <td class="htmlfield">
                                            @Html.DisplayFor(modelItem => item.Gia)
                                        </td>
                                       
                                        <td class="">
                                            @Html.DisplayFor(modelItem => item.MatHang.TenMatHang)
                                        </td>
                                       
                                             
                                        <td class="">
                                            <a href="@Url.Action("SuaCTHopDong", "DanhMuc", new { @MaCTHD = item.MaCTHD })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Sửa </a>
                                        </td>
                                       
                                        <td class="">
                                            <a href="@Url.Action("XoaCTHopDong", "DanhMuc", new { @MaCTHD = item.MaCTHD })" class="btn btn-danger btn-xs">
                                                <i class="fa fa-trash-o"></i>
                                                Xóa

                                            </a>

                                        </td>
                           
                                    </tr>
                                </tbody>
                            }
                            </br>
                        </table>

                     


                    </div>
                    <a href="@Url.Action("ThemCTHD", "DanhMuc")" class="btn btn-primary btn-xs">
                        <i class="fa fa-plus"></i>
                        Thêm Mới

                    </a>
                    <!-- /.panel-body -->
                    <!-- /.panel -->
                  
               
            </div>
            <!-- /.col-lg-12 -->
                <div style="margin-left:400px">
                    @Html.PagedListPager(Model, page => Url.Action("XemCTHopDong", new { @MaHopDong = ViewBag.MaHopDong, page = page }))
                </div>
                <div class="">

                    <a href="@Url.Action("XemDMHopDong", "DanhMuc")" class="btn btn-default btn-xs">
                        Quay lại

                    </a>
                </div> 
        </div>
    </div>
</div>
<!-- /.col-lg-12 -->
  


<script src="~/Content/jquery.priceformat.min.js"></script>
<script type="text/javascript">

    $('.htmlfield').priceFormat({
        prefix: '',
        limit: 0,
        centsLimit: 2
    });
</script>


