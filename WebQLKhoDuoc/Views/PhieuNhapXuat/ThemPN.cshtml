                var soluong = parseInt($('#SoLuong' + data_updata).val());
              
                var ma_hd = parseInt($('#MaHopDong').val());
                var Ngaysx = $('#Ngaysx' + item_).val();
                var Ngayhd = $('#Ngayhd' + item_).val();
                var gia = parseInt($('#giaht' + data_updata).val());


