                            sl_t = parseInt(sl_t) + parseInt(rowsoluong);
                            $('#SoLuongN').val(sl_t);
                            $('#SoLuongN2').html(sl_t);
                          //  getall(false);// hiu roi  -- do ham nay nek- no reset lai het sau khi 1 vong for
                            $('#TongGiaTriN').val(tongtien);
                            $('#TongN2').html(tongtien);
                            $('#tong').html("<div style='margin-left:200px' >Tổng Tiền: " + tongtien + "</div>");//csdl
