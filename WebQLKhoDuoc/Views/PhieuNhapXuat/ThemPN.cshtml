  <script type="text/javascript">
    var tongtien = 0;
    var sl_t = 0;
    var string_idmaphieun = "";
    var data_id = new Array();
    var data_idpx = new Array();
    var sav="";
    function getall(kt) {
        var data1 = parseInt($('#MaHopDong').val());
        $.ajax({
            url: '/PhieuNhapXuat/DSMatHang',
            dataType: "json",
            type: "GET",
            data: { MaHopDong: data1 },
            success: function (data) {
                var rows = '';
                var idnam = '';
                var id = 0;
                $("#dd").html("");
                $.each(data, function (i, item) {
                    idnam = item.MaMatHang;
                    if (kt == true)
                        data_id.push(idnam);
                    rows += "<tr>"
                
                    rows += "<td style='width: 218px;' id=" + "'MaMH'" + ">" + item.TenMatHang + "</td>"
                    rows += "<td style='width: 218px;'><input type='text' value='0' onchange='TinhtienRow(" + idnam + ")' data-sl_hientai='" + item.SoLuong + "'  data-gia='" + item.Gia + "' id='SoLuong" + idnam + "'> " + item.SoLuong + " <br/><p ' id='error" + idnam + "'></p></td>"
                    rows += "<td style='width: 218px;'><input type='text' value='" + item.Gia + "' onchange='TinhtienRow(" + idnam + ")'  id='giaht" + idnam + "' ></td>"
                    rows += "<td  style='width: 218px;'><input type='date' name='Ngaysx' id='Ngaysx" + idnam + "' class='form-control' placeholder=' ' required='required'></td>"
                    rows += "<td  style='width: 218px;'><input type='date' name='Ngayhd' id='Ngayhd" + idnam + "' class='form-control' placeholder=' ' required='required'></td>"
                    rows += "<td  style='width: 218px;' class='htmlfield' id='thanhtien" + idnam + "'>" + "</td>"
                    rows += "</tr>";
                    $("#dd").html(rows);
                    id++;
                    $("#n").html(id);//tong so dong hien tai
                });
            },
            error: function (xhr) {
                //  alert('error');
            }
        });
    }
    $('#MaHopDong').on('change', function () {
        getall(true);
    });
    function TinhtienRow(id) {
        $('#lablehopdong').html($('#MaHopDong').find(':selected').text())
        var slht = parseInt($('#SoLuong' + id).data('sl_hientai')); //sl hien tai co trong ctpn   

        if (Number.isNaN(slht)) {
            slht = 0;
        }

        var rowsoluong = parseInt($('#SoLuong' + id).val()); //sl nhap vao
        if (Number.isNaN(rowsoluong)) {
            rowsoluong = 0;
        }

        console.log('slht' + slht)
        if (rowsoluong > slht) {

            $('#error' + id).html("Nhập quá số liaượng hàng hiện tại! Vui lòng nhập lại");
            $('#SoLuong' + id).val(0);
            $('#thanhtien' + id).html(0)
            //tinh tong cong tien 
            tongtien = 0;
            $.each(data_id, function (i, item_) {
                var rowthanhtien = parseInt($('#thanhtien' + item_).html());
                if (Number.isNaN(rowthanhtien)) {
                    rowthanhtien = 0;
                }
                if (id == item_) {
                    rowthanhtien = 0;
                }
                console.log(item_ + "====" + rowthanhtien)
                tongtien += rowthanhtien;
                console.log(tongtien + "==99==")
            })
            $('#tong').html("<div style='float:right;' >Tổng Tiền: " + tongtien + "</div>");//csdl


        }
        else {
            $('#error' + id).html("");
            var rowgia = parseInt($('#giaht' + id).val());
            var rowtong = rowsoluong * rowgia;
            tongtien = 0;
            $('#thanhtien' + id).html(rowtong);
            //tinh tong cong tien 
            $.each(data_id, function (i, item_) {
                var rowthanhtien = parseInt($('#thanhtien' + item_).html());
                if (Number.isNaN(rowthanhtien)) {
                    rowthanhtien = 0;
                }
                console.log(item_ + "====" + rowthanhtien)
                tongtien += rowthanhtien;
                console.log(tongtien + "==99==")
            })
            $('#tong').html("<div style='float:right;' >Tổng Tiền: " + tongtien + "</div>");//csdl

        }


    }

    function EDIT() {
        string_idmaphieun = "";
        console.log(data_id)
        var sl_t = 0;
        $.each(data_id, function (i, item_) {
            if (parseInt(item_) > 0) {
