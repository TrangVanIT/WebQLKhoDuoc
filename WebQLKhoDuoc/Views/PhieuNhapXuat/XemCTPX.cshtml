<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <div class="x_content">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Xem Chi tiết phiếu xuất</h2>

                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="x_panel">
                <!-- /.panel-heading -->
                <div class="panel body panel panel-primary">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>

                            <tr class="headings">
                                <th class="column-title">
                                    Mặt hàng
                                </th>
                                <th class="column-title">
                                    Số lượng
                                </th>
                                <th class="column-title">
                                   Giá
                                </th>
                               
                            </tr>

                        </thead>
                        @foreach (var item in Model)
                        {
                            <tbody>

                                <tr class="even pointer">
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.MatHang.TenMatHang)
                                    </td>
                                    <td class="">
                                        @Html.DisplayFor(modelItem => item.SLHangTamX)
                                    </td>
                                    <td class="htmlfield">
                                        @Html.DisplayFor(modelItem => item.MatHang.Gia)
                                    </td>
                                   
                                </tr>
                            </tbody>
                        }
                        </br>
                    </table>
               
                </div>

                <!-- /.panel-body -->
                <!-- /.panel -->
              
              
            </div>
            <!-- /.col-lg-12 -->
            <div style="margin-left:400px;">
                @Html.PagedListPager(Model, page => Url.Action("XemCTPX", new { @MaPhieuX = ViewBag.CTPX, page = page }))
            </div>
        </div>
    </div>
</div>
