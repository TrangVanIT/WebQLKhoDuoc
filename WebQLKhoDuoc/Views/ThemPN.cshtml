                <div class="modal-header modal-lg ">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Chọn những mặt hàng cần nhập</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-md-4 col-sm-4 col-xs-12">Loại Mặt Hàng</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                            @Html.DropDownListFor(model => model.MaLoaiMH, new SelectList(ViewBag.StateList, "MaLoaiMH", "TenLoaiMH"), new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <table width="100%" class="table table-striped table-bordered table-hover ">
