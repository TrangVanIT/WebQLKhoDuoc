                                @Html.CheckBox("isDuyet", false, new { @readonly = "readonly", @disabled = "disabled", })

                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="form-group">
                            <label class="control-label col-md-5 col-sm-5 col-xs-12">Người Nhập</label>
