</script>
<script type="text/javascript">
    $('#modal').on('show', function () {
        $(this).find('.modal-body').css({
            width:'auto', //probably not needed
            height:'auto', //probably not needed
            'max-height':'100%'
        });
    });


    var sl_t = 0;
    function EDIT() {
       
        $.each(data_id, function (i, item_) {
            if(  parseInt(item_)>0){
            var data_updata =item_;
            var soluong = parseInt($('#SoLuong' + data_updata).val());
            var makho = parseInt($('#MaKho').val());
            if ($('#MaKho').val() == '') {
                alert('Chua chon kho');
            }
            else {
                alert(soluong);
                $.ajax({
                    url: '/PhieuNhapXuat/ThemSL',
                    type: 'POST',
                    dataType: 'json',
                    data: { MaMH: data_updata, sl: soluong, ma_kho: makho },
                    success: function (data) 
                    {
                        alert(data);
                    },
                    error: function (err) 
                    {
                        //
                        var rowsoluong = parseInt($('#SoLuong' + data_updata).val());
                        var rowgia=parseInt($('#SoLuong' + data_updata).data('gia'));
                        var rowtong=rowsoluong*rowgia;
                       
                        tongtien += rowtong;
                        sl_t += rowsoluong;
                        
                        $('#SoLuongN').val(sl_t);
                        // alert("Error: " + tongtien);
                        getall(false);
                        $('#Gia').val(tongtien);
                        $('#tong').html("<div style='margin-left' >Tổng Tiền: " + tongtien + "</div>");//csdl
                      
                    }
                });
            }
            }//end if
        });
    }       
</script>




