                            <th>Giá</th>
                            <th>Thanh Tiển</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tbody>
                </table>
                <table width="100%" class="table table-striped table-bordered table-hover " id="dd">
                    <thead>

                    </thead>

                    <tbody></tbody>

                </table>
                @*<table width="100%" class="table table-striped table-bordered table-hover" id="dd"></table>*@
                <div id="tong"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-blue " onclick="return EDIT()" >Lưu</button>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    var tongtien = 0;
    var data_id = new Array();

    function getall(kt) {
        var data1 = parseInt($('#MaLoaiMH').val());
        $.ajax({
            url:'/PhieuNhapXuat/DSMatHang',
            dataType:"json",
            type: "GET",
            data: { MaLoaiMH: data1 },
            success: function (data) {
                var rows = '';
                var idnam = '';
                $("#dd").html("");
               
                $.each(data, function (i, item) {
                    idnam = item.MaMatHang;
                    if(kt==true)
                    data_id.push(idnam);
                    rows += "<tr>"
                    rows += "<td id=" + "'Ma'" + ">" + item.MaMatHang + "</td>"
                    rows += "<td id=" + "'MaMH'" + ">" + item.TenMatHang + "</td>"
                    rows += "<td><input type='text' value='0' data-gia='" + item.Gia + "' id='SoLuong" + 1 + "'> "+item.SoLuong+"</td>"
                    rows += "<td>" + item.Gia + "</td>"
                    rows += "<td id='thanhtien"+ idnam +"'>"  + "</td>"
                    rows += "<td><button type='button' id='btnEdit' class='btn btn-primary' onclick='return show(" + item.MaMatHang + ")'>Lưu</button></td>"
                    rows += "</tr>";
                    $("#dd").html(rows);               
                });
            },
            error: function (xhr) {
                alert('error');
            }
        });
    }
    $('#MaLoaiMH').on('change', function ()
    {
        getall(true);

    });

